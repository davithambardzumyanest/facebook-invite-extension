{
  "manifest_version": 3,
  "name": "Facebook Group Inviter",
  "version": "2.0.0",
  "description": "Helps manage group invitations on Facebook with configurable settings.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Facebook Group Inviter",
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
